<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Secure Password Generator</title>
  
  <!-- Inline CSS -->
  <style>
    /* CSS from style.css */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .main-title {
      text-align: center;
      color: #333;
    }

    .description {
      text-align: center;
      margin: 20px 0;
      font-size: 16px;
    }

    .password-placeholder {
      text-align: center;
      font-size: 20px;
      color: #555;
    }

    .button-container {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
  gap: 15px; 
}

    .password-btn {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    .password-btn:hover {
      background: #0056b3;
    }

    .generated-password {
      margin: 20px 0;
      text-align: center;
    }

    .password-output {
      font-size: 18px;
      color: green;
    }

    .copy-btn {
      display: block;
      margin: 10px auto;
      padding: 10px 20px;
      background: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .copy-btn:hover {
      background: #218838;
    }

    .footer {
      text-align: center;
      margin-top: 20px;
      padding: 10px;
      background: #333;
      color: white;
    }

    .footer-text {
      margin: 0;
    }
  </style>

  <!-- Inline JavaScript -->
  <script>
    function copyToClipboard() {
      const passwordElement = document.querySelector(".password-output");
      const password = passwordElement ? passwordElement.textContent : '';
  
      if (password && password !== "Click a button to generate a password.") {
        navigator.clipboard.writeText(password).then(() => {
          alert("Password copied to clipboard!");
        }).catch(err => {
          console.error("Failed to copy password:", err);
        });
      } else {
        alert("Please generate a password first.");
      }
    }
  </script>
  
<body>
  <div class="container">
    <h1 class="main-title">Secure Password Generator</h1>

    <p class="description"><strong>Generated Password:</strong></p>
    <p id="password" class="password-placeholder">
      Click a button to generate a password.
    </p>

    <div class="button-container">
      <form action="/medium-password" method="post">
        <button type="submit" name="strength" value="medium" class="password-btn">Generate Medium Password</button>
      </form>

      <form action="/high-password" method="post">
        <button type="submit" name="strength" value="high" class="password-btn">Generate High Password</button>
      </form>

      <form action="/very-high-password" method="post">
        <button type="submit" name="strength" value="very-high" class="password-btn">Generate Very High Password</button>
      </form>
    </div>

    <div id="generatedPassword" class="generated-password">
      <strong>Generated Password: </strong>
      
      <% if (locals.mediumpass) { %>
        <h2 class="password-output">Generated: <%= mediumpass %></h2>
      <% } %>
      
      <% if (locals.highpass) { %>
        <h2 class="password-output">Generated: <%= highpass %></h2>
      <% } %>
      
      <% if (locals.veryhighpass) { %>
        <h2 class="password-output">Generated: <%= veryhighpass %></h2>
      <% } %>
    </div>
    
    <!-- Copy to Clipboard Button -->
    <button id="copyBtn" class="copy-btn" onclick="copyToClipboard()">Copy to Clipboard</button>
  </div>

  <!-- Footer Section -->
  <footer class="footer">
    <p class="footer-text">
      Â© 2025 Akash Sundar. All rights reserved.
    </p>
  </footer>
</body>
</html>
